rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin function - checks if user email is the admin email (case-insensitive)
    // OR if the user has the admin custom claim
    function isAdmin() {
      return request.auth != null && (
             request.auth.token.email.lower() == 'polyglAITool@gmail.com'.lower() ||
             request.auth.token.admin == true
      );
    }
    
    // Allow admin full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Allow authenticated users to read/write their own user data
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      match /{subcollection}/{document=**} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Public collections - anyone can read
    match /languages/{languageId} {
      allow read: if true;
      // Allow write for initialization (can be restricted later)
      allow write: if true;
      
      // Allow access to characters collection and documents
      match /characters/{levelId} {
        allow read: if true;
        
        // Allow access to the 'items' subcollection
        match /items/{itemId} {
          allow read: if true;
        }
      }
    }
    
    match /characters/{document=**} {
      allow read: if true;
    }
    
    match /leaderboards/{document=**} {
      allow read: if true;
    }
    
    // Allow avatars to be read and written for initialization
    match /avatars/{document=**} {
      allow read: if true;
      allow write: if true; // Allow initialization without authentication
    }
    
    // Allow analytics initialization
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if true; // Allow initialization without authentication
    }
    
    // Word Trainer collection - allow authenticated users to read
    match /wordTrainer/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 